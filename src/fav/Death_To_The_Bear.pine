plotshape(buy_1 == 1 and on_symb and mod_symb == "EMOJI", text='ğŸ’£', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0)
plotshape(buy_2 == 1 and on_symb and mod_symb == "EMOJI", text='ğŸ§¨', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0)
plotshape(buy_3 == 1 and on_symb and mod_symb == "EMOJI", text='ğŸ”ª ', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0)
plotshape(buy_4 == 1 and on_symb and mod_symb == "EMOJI", text='ğŸ§ª  ', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0)
plotshape(buy_5 == 1 and on_symb and mod_symb == "EMOJI", text='ğŸ—¡  ', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0)
plotshape(buy_6 == 1 and on_symb and mod_symb == "EMOJI", text='ğŸ”«  ', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0)

plotshape(buy_1 == 1 and on_symb and mod_symb == "TEXT", text='BOMB', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0, size =size.tiny)
plotshape(buy_2 == 1 and on_symb and mod_symb == "TEXT", text='DYNAMITE', style=shape.arrowup, location=location.belowbar, color=#32CD32, textcolor=color.black, offset=0, transp=0, size =size.tiny)
